{
	"name": "crucible",
	"displayName": "crucible",
	"description": "Crurible review",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onFileSystem:crucible"
	],
	"repository": {
		"url": "https://github.com/ThaiNhatMinh/crucible"
	},
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Crucible Review",
				"id": "crucible",
				"properties": {
					"crucible.hostname": {
						"type": "string",
						"description": "Hostname of crucible sever"
					},
					"crucible.port": {
						"type": "integer",
						"description": "Port of crucible sever"
					},
					"crucible.token": {
						"type": "string",
						"description": "API token for authentication"
					},
					"crucible.username": {
						"type": "string",
						"description": "Username"
					},
					"crucible.viewmode": {
						"type": "string",
						"description": "View mode of file",
						"enum": [
							"Tree",
							"Flat"
						],
						"default": "Tree",
						"enumDescriptions": [
							"View as tree directory",
							"View as list of file"
						]
					},
					"crucible.cachedirectory": {
						"type": "string",
						"description": "Cache directory where extension store source code",
						"default": "~/.crucible"
					}
				}
			}
		],
		"commands": [
			{
				"command": "crucible.reply",
				"title": "Reply",
				"enablement": "!commentIsEmpty",
				"icon": "$(refresh)"
			},
			{
				"command": "crucible.markforreply",
				"title": "Mark comment for reply",
				"icon": "$(pencil)"
			},
			{
				"command": "crucible.login",
				"title": "Login to Crucible"
			},
			{
				"command": "crucible.toreview.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "crucible.ready.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "crucible.indraft.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "crucible.outforreview.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "crucible.completed.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "crucible.closed.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "crucible.abandoned.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "crucible.opendescription",
				"title": "Open description"
			},
			{
				"command": "crucible.diff",
				"title": "Diff",
				"enablement": "view =~ /.^crucible.*/ || view == crucible.revisions"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "crucible",
					"title": "Crucible Review",
					"icon": "$(account)"
				}
			]
		},
		"views": {
			"crucible": [
				{
					"id": "crucible.toreview",
					"name": "To Review"
				},
				{
					"id": "crucible.ready",
					"name": "Ready to Close"
				},
				{
					"id": "crucible.indraft",
					"name": "In Draft"
				},
				{
					"id": "crucible.outforreview",
					"name": "Out for Review"
				},
				{
					"id": "crucible.completed",
					"name": "Completed"
				},
				{
					"id": "crucible.closed",
					"name": "Closed"
				},
				{
					"id": "crucible.abandoned",
					"name": "Abandoned"
				},
				{
					"type": "webview",
					"id": "crucible.revisions",
					"name": "Revisions selected",
					"when": "crucible.diffopen"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "crucible.toreview.refresh",
					"when": "view == crucible.toreview",
					"group": "navigation"
				},
				{
					"command": "crucible.ready.refresh",
					"when": "view == crucible.ready",
					"group": "navigation"
				},
				{
					"command": "crucible.indraft.refresh",
					"when": "view == crucible.indraft",
					"group": "navigation"
				},
				{
					"command": "crucible.outforreview.refresh",
					"when": "view == crucible.outforreview",
					"group": "navigation"
				},
				{
					"command": "crucible.completed.refresh",
					"when": "view == crucible.completed",
					"group": "navigation"
				},
				{
					"command": "crucible.closed.refresh",
					"when": "view == crucible.closed",
					"group": "navigation"
				},
				{
					"command": "crucible.abandoned.refresh",
					"when": "view == crucible.abandoned",
					"group": "navigation"
				}
			],
			"comments/comment/title": [
				{
					"group": "inline",
					"command": "crucible.markforreply"
				}
			],
			"comments/commentThread/context": [
				{
					"command": "crucible.reply",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"webpack": "webpack --mode development"
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.0.0",
		"got": "^12.3.0"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"css-loader": "^6.7.1",
		"esbuild": "^0.14.48",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.3.1",
		"typescript": "^4.5.5",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0"
	}
}
